# MongoDB Atlas Configuration
# MongoDB Connection URI (get from MongoDB Atlas dashboard)
# Format: mongodb+srv://username:password@cluster-name.mongodb.net/database-name?retryWrites=true&w=majority
MONGODB_URI=mongodb://127.0.0.1:27017/phishnet

# Application
NODE_ENV=development
PORT=3000
APP_NAME=PhishNet

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# Bcrypt Configuration
BCRYPT_ROUNDS=10
# Email Configuration (for password reset, verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend URL (for email links and CORS)
FRONTEND_URL=http://localhost:3000

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Backup
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=24

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

